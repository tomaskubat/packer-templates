{
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,

    "guest_os_type": "RedHat_64",
    "disk_size": 80960,

    "iso_url": "http://mirror.karneval.cz/pub/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "iso_checksum": "783eef50e1fb91c78901d0421d8114a29b998478",
    "iso_checksum_type": "sha1",

    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.2.1511/ks.cfg<enter><wait>"
    ],
    "boot_wait": "4s",

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ],

    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],
  "post-processors": [{
    "output": "build/Centos-7.2.1511-vboxguest-5.0.14-puppet-4.3.x-devstack-php70.box",
    "type": "vagrant",
    "only": ["virtualbox-iso"]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/centos7/yum.sh",
      "scripts/centos7/vagrant.sh",
      "scripts/centos7/vboxguest.sh",
      "scripts/centos7/puppet.sh",
      "scripts/centos7/network.sh",
      "scripts/centos7/grub.sh",
      "scripts/centos7/compact.sh"
    ]
  },
  {
    "type": "puppet-masterless",
    "manifest_file": "manifests/centos7/devstack-php70.pp"
  }]
}

