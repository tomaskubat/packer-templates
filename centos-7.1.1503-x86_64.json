{
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,

    "guest_os_type": "RedHat_64",
    "disk_size": 80960,

    "iso_url": "http://mirror.karneval.cz/pub/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
    "iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb",
    "iso_checksum_type": "sha1",

    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1.1503-x86_64/ks.cfg<enter><wait>"
    ],
    "boot_wait": "4s",

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ],

    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],
  "post-processors": [{
    "output": "build/Centos-7.1.1503-x86_64.box",
    "type": "vagrant",
    "only": ["virtualbox-iso"]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/centos7/yum.sh",
      "scripts/centos7/vagrant.sh",
      "scripts/centos7/vboxguest.sh",
      "scripts/centos7/puppet.sh",
      "scripts/centos7/network.sh",
      "scripts/centos7/grub.sh",
      "scripts/centos7/compact.sh"
    ]
  }]
}

